<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventario.App">
    <Application.Resources>
<ResourceDictionary>
            <Color x:Key="Rojo" >red</Color>
            <Color x:Key="fondo" >#AACB7E</Color>
            <Color x:Key="Gris">#D7D7D7</Color>
            <Color x:Key="Fondo">#112B47</Color>

            <Style x:Key="formulario" TargetType="Entry">
                <Setter Property="TextColor" Value="White"></Setter>
                <Setter Property="FontSize" Value="Medium"></Setter>
                <Setter Property="PlaceholderColor" Value="GreenYellow"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
