<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Inventario.Registro"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="{StaticResource Fondo}">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Image Source="registro.png" WidthRequest="150" Margin="30"></Image>
            <Label Text="Registrar Nuevo Usuario" FontSize="Title" Margin="20"/>
            <Entry x:Name="txtUsername" Placeholder="Username"
                   Style="{StaticResource formulario}"></Entry>
            <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True"
                   Style="{StaticResource formulario}"></Entry>
            <Button
                VerticalOptions="Center"
                Text="Registrar"
                TextColor="White"
                Background="Transparent"
                BorderColor="ForestGreen"
                BorderWidth="1.5"
                CornerRadius="50"
                Clicked="registrar_Clicked"
                >
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

